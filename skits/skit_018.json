    "lumiere_close": {
      "id": "lumiere_close",
      "type": "dialogue",
      "speaker": "lumiere",
      "text": "星界とカードは、同じ問いから生まれました。『あなたは、どこへ向かうのですか』と。",
      "next": "ending",
      "cast": [
        { "slot": "left", "character": "shion", "expression": "gentle", "speaking": false },
        { "slot": "center", "character": "lumiere", "expression": "grateful", "speaking": true },
        { "slot": "right", "character": "shiopon", "expression": "warm", "speaking": false }
      ]
