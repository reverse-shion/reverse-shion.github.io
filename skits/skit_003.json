  "start": "intro",
  "nodes": {
    "intro": {
      "id": "intro",
      "type": "dialogue",
      "speaker": "shion",
      "text": "……なんか、この時間いいね。音も静かで。何もしなくても、ここにいるだけで落ち着く。",
      "next": "lumiere_reply",
      "cast": [
        { "slot": "left", "character": "shion", "expression": "calm-smile", "speaking": true, "motion": { "type": "zoomIn" } },
        { "slot": "center", "character": "lumiere", "expression": "listening", "speaking": false },
        { "slot": "right", "character": "shiopon", "expression": "cheerful", "speaking": false }
      ]
    },

    "lumiere_reply": {
      "id": "lumiere_reply",
      "type": "dialogue",
      "speaker": "lumiere",
      "text": "ふふ。そう感じられるなら、今日はもう十分ですね。…がんばらなくても、ちゃんと“いい日”にできますから。",
      "next": "shiopon_agree",
      "cast": [
        { "slot": "left", "character": "shion", "expression": "patient", "speaking": false },
        { "slot": "center", "character": "lumiere", "expression": "soft-smile", "speaking": true, "motion": { "type": "zoomIn" } },
        { "slot": "right", "character": "shiopon", "expression": "cheerful", "speaking": false }
      ]
    },

    "shiopon_agree": {
      "id": "shiopon_agree",
      "type": "dialogue",
      "speaker": "shiopon",
      "text": "ぴょん！じゃあじゃあ今日は“ほっとする日”なの〜☆ しおぽん、さっきからそう思ってたよ！",
      "next": "shion_surprised",
      "cast": [
        { "slot": "left", "character": "shion", "expression": "surprised", "speaking": false },
        { "slot": "center", "character": "lumiere", "expression": "soft-grin", "speaking": false },
        { "slot": "right", "character": "shiopon", "expression": "excited", "speaking": true, "motion": { "type": "shake", "durationMs": 520, "intensity": "mild" } }
      ]
    },

    "shion_surprised": {
      "id": "shion_surprised",
      "type": "dialogue",
      "speaker": "shion",
      "text": "さっきから？……いつの間に決めてたんだよ。",
      "next": "shiopon_truth",
      "cast": [
        { "slot": "left", "character": "shion", "expression": "surprised", "speaking": true, "motion": { "type": "zoomIn" } },
        { "slot": "center", "character": "lumiere", "expression": "listening", "speaking": false },
        { "slot": "right", "character": "shiopon", "expression": "thinking", "speaking": false }
      ]
    },

    "shiopon_truth": {
      "id": "shiopon_truth",
      "type": "dialogue",
      "speaker": "shiopon",
      "text": "だってね、シオンさん。がんばってる人って、休むのへたっぴなの。だから、しおぽんが“休憩！”って言う係なの！",
      "next": "lumiere_tease",
      "cast": [
        { "slot": "left", "character": "shion", "expression": "thoughtful", "speaking": false },
        { "slot": "center", "character": "lumiere", "expression": "soft-grin", "speaking": false },
        { "slot": "right", "character": "shiopon", "expression": "thinking", "speaking": true }
      ]
    },

    "lumiere_tease": {
      "id": "lumiere_tease",
      "type": "dialogue",
      "speaker": "lumiere",
      "text": "ふふ。頼もしい係ですね。…シオン様、今日は素直に任せてみたらどうですか？",
      "next": "shion_reflect",
      "cast": [
        { "slot": "left", "character": "shion", "expression": "thoughtful", "speaking": false },
        { "slot": "center", "character": "lumiere", "expression": "teasing", "speaking": true, "motion": { "type": "zoomIn" } },
        { "slot": "right", "character": "shiopon", "expression": "cheerful", "speaking": false }
      ]
    },

    "shion_reflect": {
      "id": "shion_reflect",
      "type": "dialogue",
      "speaker": "shion",
      "text": "……うん。こうして話してるだけで、ちょっと肩が軽くなる。ここ、いい場所だな。",
      "next": "shiopon_star",
      "cast": [
        { "slot": "left", "character": "shion", "expression": "gentle", "speaking": true, "motion": { "type": "zoomIn" } },
        { "slot": "center", "character": "lumiere", "expression": "listening", "speaking": false },
        { "slot": "right", "character": "shiopon", "expression": "warm", "speaking": false }
      ]
    },

    "shiopon_star": {
      "id": "shiopon_star",
      "type": "dialogue",
      "speaker": "shiopon",
      "text": "えへへ。それならね、星も安心して光れるの〜。ずっとピカピカじゃなくてもいいんだよ。ちょっと雲があっても、ちゃんと戻ってくるの！",
      "next": "lumiere_cloud",
      "cast": [
        { "slot": "left", "character": "shion", "expression": "patient", "speaking": false },
        { "slot": "center", "character": "lumiere", "expression": "curious", "speaking": false },
        { "slot": "right", "character": "shiopon", "expression": "warm", "speaking": true }
      ]
    },

    "lumiere_cloud": {
      "id": "lumiere_cloud",
      "type": "dialogue",
      "speaker": "lumiere",
      "text": "じゃあ今は…雲の合間、って感じ？",
      "next": "shiopon_tea",
      "cast": [
        { "slot": "left", "character": "shion", "expression": "patient", "speaking": false },
        { "slot": "center", "character": "lumiere", "expression": "curious", "speaking": true, "motion": { "type": "zoomIn" } },
        { "slot": "right", "character": "shiopon", "expression": "excited", "speaking": false }
      ]
    },

    "shiopon_tea": {
      "id": "shiopon_tea",
      "type": "dialogue",
      "speaker": "shiopon",
      "text": "ううん！今はね、“あったかいお茶の時間”〜☆ ふーってして、ゆっくり飲むの！",
      "next": "shion_relief",
      "cast": [
        { "slot": "left", "character": "shion", "expression": "relief", "speaking": false },
        { "slot": "center", "character": "lumiere", "expression": "soft-smile", "speaking": false },
        { "slot": "right", "character": "shiopon", "expression": "excited", "speaking": true, "motion": { "type": "shake", "intensity": "mild" } }
      ]
    },

    "shion_relief": {
      "id": "shion_relief",
      "type": "dialogue",
      "speaker": "shion",
      "text": "はは……それは、最高だな。じゃあ、ゆっくりいこう。",
      "next": "lumiere_soft",
      "cast": [
        { "slot": "left", "character": "shion", "expression": "relief", "speaking": true, "motion": { "type": "zoomIn" } },
        { "slot": "center", "character": "lumiere", "expression": "soft-smile", "speaking": false },
        { "slot": "right", "character": "shiopon", "expression": "warm", "speaking": false }
      ]
    },

    "lumiere_soft": {
      "id": "lumiere_soft",
      "type": "dialogue",
      "speaker": "lumiere",
      "text": "同じ湯気を見て、同じ温度を分け合う。それだけで十分、心って落ち着くものですね。",
      "next": "ending",
      "cast": [
        { "slot": "left", "character": "shion", "expression": "gentle", "speaking": false },
        { "slot": "center", "character": "lumiere", "expression": "grateful", "speaking": true, "motion": { "type": "zoomIn" } },
        { "slot": "right", "character": "shiopon", "expression": "cheerful", "speaking": false }
      ]
    },

    "ending": {
      "id": "ending",
      "type": "dialogue",
      "speaker": "shion",
      "text": "……うん。今日も、悪くない。ここに帰ってこられるなら、それでいい。……大丈夫だよ。",
      "cast": [
        { "slot": "left", "character": "shion", "expression": "calm-smile", "speaking": true, "motion": { "type": "zoomIn" } },
        { "slot": "center", "character": "lumiere", "expression": "grateful", "speaking": false },
        { "slot": "right", "character": "shiopon", "expression": "warm", "speaking": false }
      ]
    }
  }
