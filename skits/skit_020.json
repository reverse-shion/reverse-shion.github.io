      ]
    },

    "shiopon_notice": {
      "id": "shiopon_notice",
      "type": "dialogue",
      "speaker": "shiopon",
      "text": "あ、わかる！きらきらしてるけど、なんか…ふわっと重たい。",
      "next": "lumiere_explain",
      "cast": [
        { "slot": "left", "character": "shion", "expression": "patient", "speaking": false },
        { "slot": "center", "character": "lumiere", "expression": "listening", "speaking": false },
        { "slot": "right", "character": "shiopon", "expression": "thinking", "speaking": true }
      ]
    },

    "lumiere_explain": {
      "id": "lumiere_explain",
      "type": "dialogue",
      "speaker": "lumiere",
      "text": "はい。星界では、このような空模様を『ため息雲』と呼びます。",
      "next": "shion_reply",
      "cast": [
        { "slot": "left", "character": "shion", "expression": "patient", "speaking": false },
        { "slot": "center", "character": "lumiere", "expression": "soft-smile", "speaking": true },
        { "slot": "right", "character": "shiopon", "expression": "warm", "speaking": false }
      ]
    },

    "shion_reply": {
      "id": "shion_reply",
      "type": "dialogue",
      "speaker": "shion",
      "text": "雨が降るわけでもない。ただ、何かが胸に残ってる時の空だ。",
      "next": "shiopon_touch",
      "cast": [
        { "slot": "left", "character": "shion", "expression": "gentle", "speaking": true },
        { "slot": "center", "character": "lumiere", "expression": "listening", "speaking": false },
        { "slot": "right", "character": "shiopon", "expression": "warm", "speaking": false }
      ]
    },

    "shiopon_touch": {
      "id": "shiopon_touch",
      "type": "dialogue",
      "speaker": "shiopon",
      "text": "そっか……じゃあ今日は、無理しない日のお天気だね。",
      "next": "lumiere_agree",
      "cast": [
        { "slot": "left", "character": "shion", "expression": "calm-smile", "speaking": false },
        { "slot": "center", "character": "lumiere", "expression": "listening", "speaking": false },
        { "slot": "right", "character": "shiopon", "expression": "cheerful", "speaking": true }
      ]
    },

    "lumiere_agree": {
      "id": "lumiere_agree",
      "type": "dialogue",
      "speaker": "lumiere",
      "text": "ええ。星界の天気は、行動を促すものではなく……許しを与えるものでございます。",
      "next": "shion_close",
      "cast": [
        { "slot": "left", "character": "shion", "expression": "thoughtful", "speaking": false },
        { "slot": "center", "character": "lumiere", "expression": "grateful", "speaking": true },
        { "slot": "right", "character": "shiopon", "expression": "warm", "speaking": false }
      ]
    },

    "shion_close": {
      "id": "shion_close",
      "type": "dialogue",
      "speaker": "shion",
      "text": "……晴れの日だけが、いい日じゃない。",
      "next": "ending",
      "cast": [
        { "slot": "left", "character": "shion", "expression": "gentle", "speaking": true },
        { "slot": "center", "character": "lumiere", "expression": "soft-smile", "speaking": false },
        { "slot": "right", "character": "shiopon", "expression": "warm", "speaking": false }
      ]
    },

    "ending": {
      "id": "ending",
      "type": "dialogue",
      "speaker": "shiopon",
      "text": "うん。今日の空も、ちゃんと一緒にいてくれてるね。",
      "cast": [
        { "slot": "left", "character": "shion", "expression": "calm-smile", "speaking": false },
        { "slot": "center", "character": "lumiere", "expression": "soft-smile", "speaking": false },
        { "slot": "right", "character": "shiopon", "expression": "warm", "speaking": true }
