  "nodes": {
    "intro": {
      "id": "intro",
      "type": "dialogue",
      "speaker": "shion",
      "text": "……夜明け前ってさ。不思議だよな。夜でもなくて、朝でもない。",
      "next": "shiopon_sense",
      "cast": [
        { "slot": "left", "character": "shion", "expression": "calm-smile", "speaking": true },
        { "slot": "center", "character": "lumiere", "expression": "listening", "speaking": false },
        { "slot": "right", "character": "shiopon", "expression": "warm", "speaking": false }
      ]
    },

    "shiopon_sense": {
      "id": "shiopon_sense",
      "type": "dialogue",
      "speaker": "shiopon",
      "text": "うん……しーんってしてるのに、どこか動いてる感じがする。",
      "next": "lumiere_boundary",
      "cast": [
        { "slot": "left", "character": "shion", "expression": "patient", "speaking": false },
        { "slot": "center", "character": "lumiere", "expression": "listening", "speaking": false },
        { "slot": "right", "character": "shiopon", "expression": "thinking", "speaking": true }
      ]
    },

    "lumiere_boundary": {
      "id": "lumiere_boundary",
      "type": "dialogue",
      "speaker": "lumiere",
      "text": "はい。夜明け前は、この世とあの世の境が、いちばん薄くなる時間だと言われております。どちらにも完全には属さない、静かな狭間でございます。",
      "next": "shion_question",
      "cast": [
        { "slot": "left", "character": "shion", "expression": "thoughtful", "speaking": false },
        { "slot": "center", "character": "lumiere", "expression": "soft-smile", "speaking": true },
        { "slot": "right", "character": "shiopon", "expression": "warm", "speaking": false }
      ]
    },

    "shion_question": {
      "id": "shion_question",
      "type": "dialogue",
      "speaker": "shion",
      "text": "……じゃあさ。魂って、どこに行くんだろうな。終わったあと。",
      "next": "lumiere_answer",
      "cast": [
        { "slot": "left", "character": "shion", "expression": "thoughtful", "speaking": true },
        { "slot": "center", "character": "lumiere", "expression": "listening", "speaking": false },
        { "slot": "right", "character": "shiopon", "expression": "warm", "speaking": false }
      ]
    },

    "lumiere_answer": {
      "id": "lumiere_answer",
      "type": "dialogue",
      "speaker": "lumiere",
      "text": "星界では、『魂はどこかへ行くのではなく、響きへ還る』と考えられております。場所ではなく、状態……音のようなものです。",
      "next": "shiopon_image",
      "cast": [
        { "slot": "left", "character": "shion", "expression": "patient", "speaking": false },
        { "slot": "center", "character": "lumiere", "expression": "soft-smile", "speaking": true },
        { "slot": "right", "character": "shiopon", "expression": "thinking", "speaking": false }
      ]
    },

    "shiopon_image": {
      "id": "shiopon_image",
      "type": "dialogue",
      "speaker": "shiopon",
      "text": "……音みたいに、ふわって広がる感じ？",
      "next": "lumiere_confirm",
      "cast": [
        { "slot": "left", "character": "shion", "expression": "gentle", "speaking": false },
        { "slot": "center", "character": "lumiere", "expression": "listening", "speaking": false },
        { "slot": "right", "character": "shiopon", "expression": "warm", "speaking": true }
      ]
    },

    "lumiere_confirm": {
      "id": "lumiere_confirm",
      "type": "dialogue",
      "speaker": "lumiere",
      "text": "はい、しおぽん様。喜びも、悲しみも、言葉にならなかった想いも……すべてが溶け合い、次の誰かの心をそっと揺らすのです。",
      "next": "shion_thought",
      "cast": [
        { "slot": "left", "character": "shion", "expression": "gentle", "speaking": false },
        { "slot": "center", "character": "lumiere", "expression": "soft-smile", "speaking": true },
        { "slot": "right", "character": "shiopon", "expression": "warm", "speaking": false }
      ]
    },

    "shion_thought": {
      "id": "shion_thought",
      "type": "dialogue",
      "speaker": "shion",
      "text": "……それってさ。消えるんじゃなくて、誰かの中で生き続けるってことだよな。",
      "next": "lumiere_shionphilosophy",
      "cast": [
        { "slot": "left", "character": "shion", "expression": "thoughtful", "speaking": true },
        { "slot": "center", "character": "lumiere", "expression": "listening", "speaking": false },
        { "slot": "right", "character": "shiopon", "expression": "warm", "speaking": false }
      ]
    },

    "lumiere_shionphilosophy": {
      "id": "lumiere_shionphilosophy",
      "type": "dialogue",
      "speaker": "lumiere",
      "text": "はい、シオン様。それが、詩韻思想で語られる『言葉は魂の行き先』という考え方でございます。",
      "next": "ending",
      "cast": [
        { "slot": "left", "character": "shion", "expression": "calm-smile", "speaking": false },
        { "slot": "center", "character": "lumiere", "expression": "grateful", "speaking": true },
        { "slot": "right", "character": "shiopon", "expression": "warm", "speaking": false }
      ]
    },

    "ending": {
      "id": "ending",
      "type": "dialogue",
      "speaker": "shion",
      "text": "……そっか。なら、今ここで交わした言葉も、どこかで誰かを支えてるのかもしれないな。",
      "cast": [
        { "slot": "left", "character": "shion", "expression": "calm-smile", "speaking": true },
        { "slot": "center", "character": "lumiere", "expression": "soft-smile", "speaking": false },
        { "slot": "right", "character": "shiopon", "expression": "warm", "speaking": false }
      ]
    }
  }
