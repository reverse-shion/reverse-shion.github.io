  "start": "intro",
  "nodes": {
    "intro": {
      "id": "intro",
      "type": "dialogue",
      "speaker": "lumiere",
      "text": "すべて片付きました、シオン様、しおぽん様。…今夜は、音がとても静かですね。",
      "next": "shion_reply",
      "cast": [
        { "slot": "left", "character": "shion", "expression": "calm-smile", "speaking": false },
        { "slot": "center", "character": "lumiere", "expression": "listening", "speaking": true, "motion": { "type": "zoomIn" } },
        { "slot": "right", "character": "shiopon", "expression": "warm", "speaking": false }
      ]
    },

    "shion_reply": {
      "id": "shion_reply",
      "type": "dialogue",
      "speaker": "shion",
      "text": "……うん。昼の音が全部、ちゃんと眠った感じがする。こういう静けさ、好きだな。",
      "next": "shiopon_whisper",
      "cast": [
        { "slot": "left", "character": "shion", "expression": "thoughtful", "speaking": true, "motion": { "type": "zoomIn" } },
        { "slot": "center", "character": "lumiere", "expression": "listening", "speaking": false },
        { "slot": "right", "character": "shiopon", "expression": "warm", "speaking": false }
      ]
    },

    "shiopon_whisper": {
      "id": "shiopon_whisper",
      "type": "dialogue",
      "speaker": "shiopon",
      "text": "しー…なの。夜はね、世界が小さく息してる時間なの〜。",
      "next": "lumiere_soft",
      "cast": [
        { "slot": "left", "character": "shion", "expression": "gentle", "speaking": false },
        { "slot": "center", "character": "lumiere", "expression": "soft-smile", "speaking": false },
        { "slot": "right", "character": "shiopon", "expression": "warm", "speaking": true }
      ]
    },

    "lumiere_soft": {
      "id": "lumiere_soft",
      "type": "dialogue",
      "speaker": "lumiere",
      "text": "はい。夜は、今日をそっと棚に戻す時間でございます。無理に振り返らなくても、自然と整っていきますから。",
      "next": "shion_reflect",
      "cast": [
        { "slot": "left", "character": "shion", "expression": "patient", "speaking": false },
        { "slot": "center", "character": "lumiere", "expression": "soft-smile", "speaking": true, "motion": { "type": "zoomIn" } },
        { "slot": "right", "character": "shiopon", "expression": "warm", "speaking": false }
      ]
    },

    "shion_reflect": {
      "id": "shion_reflect",
      "type": "dialogue",
      "speaker": "shion",
      "text": "棚に戻す、か。…いい表現だな。今日はちゃんと、しまう場所がある。",
      "next": "shiopon_sleepy",
      "cast": [
        { "slot": "left", "character": "shion", "expression": "thoughtful", "speaking": true, "motion": { "type": "zoomIn" } },
        { "slot": "center", "character": "lumiere", "expression": "listening", "speaking": false },
        { "slot": "right", "character": "shiopon", "expression": "thinking", "speaking": false }
      ]
    },

    "shiopon_sleepy": {
      "id": "shiopon_sleepy",
      "type": "dialogue",
      "speaker": "shiopon",
      "text": "ふぁ……。しおぽんね、今日あったこと、ぜんぶあったかくなってるの。",
      "next": "lumiere_grateful",
      "cast": [
        { "slot": "left", "character": "shion", "expression": "gentle", "speaking": false },
        { "slot": "center", "character": "lumiere", "expression": "grateful", "speaking": false },
        { "slot": "right", "character": "shiopon", "expression": "warm", "speaking": true }
      ]
    },

    "lumiere_grateful": {
      "id": "lumiere_grateful",
      "type": "dialogue",
      "speaker": "lumiere",
      "text": "それは、良い一日だった証でございますね。シオン様、しおぽん様…本日もご一緒でき、感謝いたします。",
      "next": "ending",
      "cast": [
        { "slot": "left", "character": "shion", "expression": "relief", "speaking": false },
        { "slot": "center", "character": "lumiere", "expression": "grateful", "speaking": true, "motion": { "type": "zoomIn" } },
        { "slot": "right", "character": "shiopon", "expression": "warm", "speaking": false }
      ]
    },

    "ending": {
      "id": "ending",
      "type": "dialogue",
      "speaker": "shion",
      "text": "……静かだな。今日が、ちゃんと終わった音がする。じゃあ、灯りを少し落とそう。",
      "cast": [
        { "slot": "left", "character": "shion", "expression": "calm-smile", "speaking": true, "motion": { "type": "zoomIn" } },
        { "slot": "center", "character": "lumiere", "expression": "soft-smile", "speaking": false },
        { "slot": "right", "character": "shiopon", "expression": "warm", "speaking": false }
      ]
    }
  }
