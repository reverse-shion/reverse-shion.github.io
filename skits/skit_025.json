  "start": "intro",
  "nodes": {
    "intro": {
      "id": "intro",
      "type": "dialogue",
      "speaker": "shion",
      "text": "……今日は、このカードの話をしよう。",
      "next": "card_name",
      "cast": [
        { "slot": "left", "character": "shion", "expression": "calm-smile", "speaking": true },
        { "slot": "center", "character": "lumiere", "expression": "listening", "speaking": false },
        { "slot": "right", "character": "shiopon", "expression": "thinking", "speaking": false }
      ]
    },

    "card_name": {
      "id": "card_name",
      "type": "dialogue",
      "speaker": "shion",
      "text": "タロットの《死神》だ。",
      "next": "shiopon_react",
      "cast": [
        { "slot": "left", "character": "shion", "expression": "thoughtful", "speaking": true },
        { "slot": "center", "character": "lumiere", "expression": "soft-smile", "speaking": false },
        { "slot": "right", "character": "shiopon", "expression": "surprised", "speaking": false }
      ]
    },

    "shiopon_react": {
      "id": "shiopon_react",
      "type": "dialogue",
      "speaker": "shiopon",
      "text": "……え。し、しにがみ……？それって、こわいやつじゃないの？",
      "next": "lumiere_calm",
      "cast": [
        { "slot": "left", "character": "shion", "expression": "patient", "speaking": false },
        { "slot": "center", "character": "lumiere", "expression": "listening", "speaking": false },
        { "slot": "right", "character": "shiopon", "expression": "unsure", "speaking": true }
      ]
    },

    "lumiere_calm": {
      "id": "lumiere_calm",
      "type": "dialogue",
      "speaker": "lumiere",
      "text": "名は恐ろしく聞こえますが……このカード、剣を振り上げてはいません。",
      "next": "shion_detail",
      "cast": [
        { "slot": "left", "character": "shion", "expression": "gentle", "speaking": false },
        { "slot": "center", "character": "lumiere", "expression": "wondering", "speaking": true },
        { "slot": "right", "character": "shiopon", "expression": "thinking", "speaking": false }
      ]
    },

    "shion_detail": {
      "id": "shion_detail",
      "type": "dialogue",
      "speaker": "shion",
      "text": "死神は、奪いに来る存在じゃない。終わったものを、静かに告げに来る。",
      "next": "shiopon_listen",
      "cast": [
        { "slot": "left", "character": "shion", "expression": "calm-smile", "speaking": true },
        { "slot": "center", "character": "lumiere", "expression": "listening", "speaking": false },
        { "slot": "right", "character": "shiopon", "expression": "thinking", "speaking": false }
      ]
    },

    "shiopon_listen": {
      "id": "shiopon_listen",
      "type": "dialogue",
      "speaker": "shiopon",
      "text": "……もう、役目を終えたよって？",
      "next": "shion_nod",
      "cast": [
        { "slot": "left", "character": "shion", "expression": "gentle", "speaking": false },
        { "slot": "center", "character": "lumiere", "expression": "soft-smile", "speaking": false },
        { "slot": "right", "character": "shiopon", "expression": "thinking", "speaking": true }
      ]
    },

    "shion_nod": {
      "id": "shion_nod",
      "type": "dialogue",
      "speaker": "shion",
      "text": "ああ。なのに人は、安心だからって、終わった場所に立ち続けてしまう。",
      "next": "lumiere_air",
      "cast": [
        { "slot": "left", "character": "shion", "expression": "thoughtful", "speaking": true },
        { "slot": "center", "character": "lumiere", "expression": "listening", "speaking": false },
        { "slot": "right", "character": "shiopon", "expression": "sad", "speaking": false }
      ]
    },

    "lumiere_air": {
      "id": "lumiere_air",
      "type": "dialogue",
      "speaker": "lumiere",
      "text": "空気が淀んでも、慣れてしまえば……そこが“今”になってしまいますから。",
      "next": "shiopon_realize",
      "cast": [
        { "slot": "left", "character": "shion", "expression": "patient", "speaking": false },
        { "slot": "center", "character": "lumiere", "expression": "soft-smile", "speaking": true },
        { "slot": "right", "character": "shiopon", "expression": "thinking", "speaking": false }
      ]
    },

    "shiopon_realize": {
      "id": "shiopon_realize",
      "type": "dialogue",
      "speaker": "shiopon",
      "text": "……じゃあ死神は、「ここじゃないよ」って教えてくれるカードなんだ。",
      "next": "shion_confirm",
      "cast": [
        { "slot": "left", "character": "shion", "expression": "gentle", "speaking": false },
        { "slot": "center", "character": "lumiere", "expression": "inspired", "speaking": false },
        { "slot": "right", "character": "shiopon", "expression": "warm", "speaking": true }
      ]
    },

    "shion_confirm": {
      "id": "shion_confirm",
      "type": "dialogue",
      "speaker": "shion",
      "text": "そうだ。タロットの《死神》は、新しい自分に生まれ変わる準備ができた印。",
      "next": "shiopon_relief",
      "cast": [
        { "slot": "left", "character": "shion", "expression": "calm-smile", "speaking": true },
        { "slot": "center", "character": "lumiere", "expression": "grateful", "speaking": false },
        { "slot": "right", "character": "shiopon", "expression": "warm", "speaking": false }
      ]
    },

    "shiopon_relief": {
      "id": "shiopon_relief",
      "type": "dialogue",
      "speaker": "shiopon",
      "text": "……こわいカードじゃなくて、ちゃんと前に進むカードなんだね。",
      "next": "ending",
      "cast": [
        { "slot": "left", "character": "shion", "expression": "relief", "speaking": false },
        { "slot": "center", "character": "lumiere", "expression": "soft-smile", "speaking": false },
        { "slot": "right", "character": "shiopon", "expression": "joyful-tears", "speaking": true }
      ]
    },

    "ending": {
      "id": "ending",
      "type": "dialogue",
      "speaker": "shion",
      "text": "大丈夫だ。《死神》は終わりじゃない。次の自分への合図だからな。",
      "cast": [
        { "slot": "left", "character": "shion", "expression": "ready", "speaking": true },
        { "slot": "center", "character": "lumiere", "expression": "grateful", "speaking": false },
        { "slot": "right", "character": "shiopon", "expression": "warm", "speaking": false }
      ]
    }
  }
