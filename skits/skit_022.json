    "version": "final"
  },
  "start": "intro",
  "nodes": {
    "intro": {
      "id": "intro",
      "type": "dialogue",
      "speaker": "lumiere",
      "text": "……今の言葉、少し震えておりましたね。",
      "next": "shiopon_notice",
      "cast": [
        { "slot": "left", "character": "shion", "expression": "patient", "speaking": false },
        { "slot": "center", "character": "lumiere", "expression": "wondering", "speaking": true }
      ]
    },

    "shiopon_notice": {
      "id": "shiopon_notice",
      "type": "dialogue",
      "speaker": "shiopon",
      "text": "でもさ……さっき、空気がふわってなったよ。",
      "next": "shion_watch",
      "cast": [
        { "slot": "left", "character": "shion", "expression": "patient", "speaking": false },
        { "slot": "center", "character": "lumiere", "expression": "listening", "speaking": false },
        { "slot": "right", "character": "shiopon", "expression": "thinking", "speaking": true }
      ]
    },

    "shion_watch": {
      "id": "shion_watch",
      "type": "dialogue",
      "speaker": "shion",
      "text": "……聞いてる側が、息を吐いた。",
      "next": "lumiere_doubt",
      "cast": [
        { "slot": "left", "character": "shion", "expression": "thoughtful", "speaking": true },
        { "slot": "center", "character": "lumiere", "expression": "listening", "speaking": false }
      ]
    },

    "lumiere_doubt": {
      "id": "lumiere_doubt",
      "type": "dialogue",
      "speaker": "lumiere",
      "text": "……正しい導きだったのかは、分かりません。ただ……言葉が、選べなかったのです。",
      "next": "shion_answer",
      "cast": [
        { "slot": "left", "character": "shion", "expression": "patient", "speaking": false },
        { "slot": "center", "character": "lumiere", "expression": "soft-smile", "speaking": true }
      ]
    },

    "shion_answer": {
      "id": "shion_answer",
      "type": "dialogue",
      "speaker": "shion",
      "text": "選ばなかったから、届いた。",
      "next": "lumiere_pause",
      "cast": [
        { "slot": "left", "character": "shion", "expression": "gentle", "speaking": true },
        { "slot": "center", "character": "lumiere", "expression": "curious", "speaking": false }
      ]
    },

    "lumiere_pause": {
      "id": "lumiere_pause",
      "type": "dialogue",
      "speaker": "lumiere",
      "text": "……迷いを含んだままでも、よろしかったのでしょうか。",
      "next": "shion_confirm",
      "cast": [
        { "slot": "left", "character": "shion", "expression": "calm-smile", "speaking": false },
        { "slot": "center", "character": "lumiere", "expression": "listening", "speaking": true }
      ]
    },

    "shion_confirm": {
      "id": "shion_confirm",
      "type": "dialogue",
      "speaker": "shion",
      "text": "ああ。……その迷いに、相手が重なった。",
      "next": "shiopon_feel",
      "cast": [
        { "slot": "left", "character": "shion", "expression": "relief", "speaking": true },
        { "slot": "center", "character": "lumiere", "expression": "soft-smile", "speaking": false }
      ]
    },

    "shiopon_feel": {
      "id": "shiopon_feel",
      "type": "dialogue",
      "speaker": "shiopon",
      "text": "うん……あの人、泣かなかったけどね。しおぽん、胸がほどける音した。",
      "next": "lumiere_realize",
      "cast": [
        { "slot": "left", "character": "shion", "expression": "calm-smile", "speaking": false },
        { "slot": "center", "character": "lumiere", "expression": "wondering", "speaking": false },
        { "slot": "right", "character": "shiopon", "expression": "warm", "speaking": true }
      ]
    },

    "lumiere_realize": {
      "id": "lumiere_realize",
      "type": "dialogue",
      "speaker": "lumiere",
      "text": "……では、あの方は。",
      "next": "shion_close",
      "cast": [
        { "slot": "left", "character": "shion", "expression": "patient", "speaking": false },
        { "slot": "center", "character": "lumiere", "expression": "listening", "speaking": true }
      ]
    },

    "shion_close": {
      "id": "shion_close",
      "type": "dialogue",
      "speaker": "shion",
      "text": "救われたよ。……リュミエールの、その言葉で。",
      "next": "ending",
      "cast": [
        { "slot": "left", "character": "shion", "expression": "smiling", "speaking": true },
        { "slot": "center", "character": "lumiere", "expression": "grateful", "speaking": false }
      ]
    },

    "ending": {
      "id": "ending",
      "type": "dialogue",
      "speaker": "lumiere",
      "text": "……でしたら私は、これからも、確信のない言葉で参りましょう。",
      "cast": [
        { "slot": "left", "character": "shion", "expression": "gentle", "speaking": false },
        { "slot": "center", "character": "lumiere", "expression": "grateful", "speaking": true },
        { "slot": "right", "character": "shiopon", "expression": "joyful-tears", "speaking": false }
      ]
    }
  }
