  "nodes": {
    "intro": {
      "id": "intro",
      "type": "dialogue",
      "speaker": "shiopon",
      "text": "わっ……！ ねえ見て見て！ 空から提灯が降ってきてるの！ 星のお祭り、始まってるよ〜！",
      "next": "shion_stall",
      "cast": [
        { "slot": "left", "character": "shion", "expression": "surprised", "speaking": false },
        { "slot": "center", "character": "lumiere", "expression": "curious", "speaking": false },
        { "slot": "right", "character": "shiopon", "expression": "excited", "speaking": true }
      ]
    },

    "shion_stall": {
      "id": "shion_stall",
      "type": "dialogue",
      "speaker": "shion",
      "text": "……音が重なってるな。焼ける音、笑い声、鈴の音。甘い匂いと、少し焦げた星屑の香り。",
      "next": "lumiere_see",
      "cast": [
        { "slot": "left", "character": "shion", "expression": "thoughtful", "speaking": true },
        { "slot": "center", "character": "lumiere", "expression": "listening", "speaking": false },
        { "slot": "right", "character": "shiopon", "expression": "cheerful", "speaking": false }
      ]
    },

    "lumiere_see": {
      "id": "lumiere_see",
      "type": "dialogue",
      "speaker": "lumiere",
      "text": "……屋台が、星座の形をしています。こちらは流星飴……あ、串を渡されました。光がまだ、揺れています。",
      "next": "shiopon_bite",
      "cast": [
        { "slot": "left", "character": "shion", "expression": "gentle", "speaking": false },
        { "slot": "center", "character": "lumiere", "expression": "wondering", "speaking": true },
        { "slot": "right", "character": "shiopon", "expression": "warm", "speaking": false }
      ]
    },

    "shiopon_bite": {
      "id": "shiopon_bite",
      "type": "dialogue",
      "speaker": "shiopon",
      "text": "いただきまーす！ ……んっ！ 外ぱりっ！ 中ふわっ！ これ、夜空かじってる感じ〜！",
      "next": "shion_laugh",
      "cast": [
        { "slot": "left", "character": "shion", "expression": "smiling", "speaking": false },
        { "slot": "center", "character": "lumiere", "expression": "soft-grin", "speaking": false },
        { "slot": "right", "character": "shiopon", "expression": "excited", "speaking": true }
      ]
    },

    "shion_laugh": {
      "id": "shion_laugh",
      "type": "dialogue",
      "speaker": "shion",
      "text": "……後ろ、急に人が増えたな。踊りの輪ができてる。セレフィーズも、笑ってる。",
      "next": "lumiere_music",
      "cast": [
        { "slot": "left", "character": "shion", "expression": "calm-smile", "speaking": true },
        { "slot": "center", "character": "lumiere", "expression": "listening", "speaking": false },
        { "slot": "right", "character": "shiopon", "expression": "thinking", "speaking": false }
      ]
    },

    "lumiere_music": {
      "id": "lumiere_music",
      "type": "dialogue",
      "speaker": "lumiere",
      "text": "太鼓……星鼓ですね。鼓動と同じ速さです。……足が、勝手に前に。",
      "next": "shiopon_dance",
      "cast": [
        { "slot": "left", "character": "shion", "expression": "gentle", "speaking": false },
        { "slot": "center", "character": "lumiere", "expression": "inspired", "speaking": true },
        { "slot": "right", "character": "shiopon", "expression": "warm", "speaking": false }
      ]
    },

    "shiopon_dance": {
      "id": "shiopon_dance",
      "type": "dialogue",
      "speaker": "shiopon",
      "text": "わっ、手つながれた！ ぐるぐる〜！ ほらシオンさんも！ いっしょいっしょ！",
      "next": "shion_spin",
      "cast": [
        { "slot": "left", "character": "shion", "expression": "surprised", "speaking": false },
        { "slot": "center", "character": "lumiere", "expression": "soft-smile", "speaking": false },
        { "slot": "right", "character": "shiopon", "expression": "excited", "speaking": true }
      ]
    },

    "shion_spin": {
      "id": "shion_spin",
      "type": "dialogue",
      "speaker": "shion",
      "text": "……はは。視界が回るな。提灯も星も、全部笑ってるみたいだ。",
      "next": "ending",
      "cast": [
        { "slot": "left", "character": "shion", "expression": "smiling", "speaking": true },
        { "slot": "center", "character": "lumiere", "expression": "soft-smile", "speaking": false },
        { "slot": "right", "character": "shiopon", "expression": "warm", "speaking": false }
      ]
    },

    "ending": {
      "id": "ending",
      "type": "dialogue",
      "speaker": "lumiere",
      "text": "……こんなに賑やかで、光に満ちているのに……胸の奥は、とても静かです。",
      "cast": [
        { "slot": "left", "character": "shion", "expression": "calm-smile", "speaking": false },
        { "slot": "center", "character": "lumiere", "expression": "grateful", "speaking": true },
        { "slot": "right", "character": "shiopon", "expression": "warm", "speaking": false }
      ]
    }
