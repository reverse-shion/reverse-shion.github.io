{
  "meta": {
    "title": "Shionverse Skit 031",
    "description": "A festival that exists only in the Starrealm — fragments of light, sound, and quiet wonder.",
    "version": "1.0"
  },
  "start": "intro",
  "nodes": {
    "intro": {
      "id": "intro",
      "type": "dialogue",
      "speaker": "shion",
      "text": "……同じ祭りのはずなのに、さっきと景色が違うな。",
      "next": "shiopon_notice",
      "cast": [
        { "slot": "left", "character": "shion", "expression": "calm-smile", "speaking": true },
        { "slot": "center", "character": "lumiere", "expression": "observing", "speaking": false },
        { "slot": "right", "character": "shiopon", "expression": "curious", "speaking": false }
      ]
    },

    "shiopon_notice": {
      "id": "shiopon_notice",
      "type": "dialogue",
      "speaker": "shiopon",
      "text": "ほんとだ！ さっきまで道だったところ、空になってるよ！ 下、星が流れてる〜！",
      "next": "lumiere_explain",
      "cast": [
        { "slot": "left", "character": "shion", "expression": "surprised", "speaking": false },
        { "slot": "center", "character": "lumiere", "expression": "listening", "speaking": false },
        { "slot": "right", "character": "shiopon", "expression": "excited", "speaking": true }
      ]
    },

    "lumiere_explain": {
      "id": "lumiere_explain",
      "type": "dialogue",
      "speaker": "lumiere",
      "text": "……星界の祭りは、固定されていません。歩くたびに、思い出に近い景色へ変わります。",
      "next": "shion_view",
      "cast": [
        { "slot": "left", "character": "shion", "expression": "thoughtful", "speaking": false },
        { "slot": "center", "character": "lumiere", "expression": "soft", "speaking": true },
        { "slot": "right", "character": "shiopon", "expression": "listening", "speaking": false }
      ]
    },

    "shion_view": {
      "id": "shion_view",
      "type": "dialogue",
      "speaker": "shion",
      "text": "……屋台の音も、一定じゃないな。遠くで鳴ってるのに、すぐ隣みたいに聞こえる。",
      "next": "shiopon_senses",
      "cast": [
        { "slot": "left", "character": "shion", "expression": "calm", "speaking": true },
        { "slot": "center", "character": "lumiere", "expression": "observing", "speaking": false },
        { "slot": "right", "character": "shiopon", "expression": "thinking", "speaking": false }
      ]
    },

    "shiopon_senses": {
      "id": "shiopon_senses",
      "type": "dialogue",
      "speaker": "shiopon",
      "text": "においもね！ 甘いのに、なつかしくて……でも思い出せないの！",
      "next": "lumiere_people",
      "cast": [
        { "slot": "left", "character": "shion", "expression": "gentle", "speaking": false },
        { "slot": "center", "character": "lumiere", "expression": "listening", "speaking": false },
        { "slot": "right", "character": "shiopon", "expression": "wonder", "speaking": true }
      ]
    },

    "lumiere_people": {
      "id": "lumiere_people",
      "type": "dialogue",
      "speaker": "lumiere",
      "text": "……見てください。踊っている人たち、影がありません。光だけが、重なっています。",
      "next": "shion_realize",
      "cast": [
        { "slot": "left", "character": "shion", "expression": "surprised", "speaking": false },
        { "slot": "center", "character": "lumiere", "expression": "serious", "speaking": true },
        { "slot": "right", "character": "shiopon", "expression": "quiet", "speaking": false }
      ]
    },

    "shion_realize": {
      "id": "shion_realize",
      "type": "dialogue",
      "speaker": "shion",
      "text": "……顔も、はっきり見えない。でも……誰も不安そうじゃないな。",
      "next": "shiopon_feel",
      "cast": [
        { "slot": "left", "character": "shion", "expression": "soft-smile", "speaking": true },
        { "slot": "center", "character": "lumiere", "expression": "calm", "speaking": false },
        { "slot": "right", "character": "shiopon", "expression": "listening", "speaking": false }
      ]
    },

    "shiopon_feel": {
      "id": "shiopon_feel",
      "type": "dialogue",
      "speaker": "shiopon",
      "text": "うん……名前も、声も、わかんないのに……いっしょにいる感じがする。",
      "next": "ending",
      "cast": [
        { "slot": "left", "character": "shion", "expression": "gentle", "speaking": false },
        { "slot": "center", "character": "lumiere", "expression": "peaceful", "speaking": false },
        { "slot": "right", "character": "shiopon", "expression": "warm", "speaking": true }
      ]
    },

    "ending": {
      "id": "ending",
      "type": "dialogue",
      "speaker": "lumiere",
      "text": "……ここでは、誰も一人になりません。祭りが、そうさせているのではなく……最初から、そうなのです。",
      "cast": [
        { "slot": "left", "character": "shion", "expression": "calm-smile", "speaking": false },
        { "slot": "center", "character": "lumiere", "expression": "grateful", "speaking": true },
        { "slot": "right", "character": "shiopon", "expression": "quiet-smile", "speaking": false }
      ]
    }
  }
}
